<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.example.admin.manzlawy.FoodDetails">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:typeface="serif"
                    android:text="Om Ali"
                    android:textStyle="bold"
                    android:textSize="40dp"
                    android:textColor="#fff"
                    android:background="#a70919"
                    android:id="@+id/logo"
                    android:gravity="center"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:src="@drawable/omali"
                    android:layout_below="@+id/logo"
                    android:id="@+id/omalisora"
                    android:layout_margin="15dp" />
            <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/ingredients"
                    android:hint="Ingerdients"
                    android:layout_below="@+id/omalisora"
                    android:textSize="30sp"
                    android:layout_marginLeft="15dp"
                    android:textColor="#f55"
                    android:gravity="left"/>
            <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/first_ing"
                    android:hint="Sugar : 2 spoons"
                    android:layout_below="@+id/ingredients"
                    android:textSize="15sp"
                    android:layout_marginLeft="20dp"
                    android:gravity="left"/>
            <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/second_ing"
                    android:hint="Salt : 5 spoons"
                    android:layout_below="@+id/first_ing"
                    android:textSize="15sp"
                    android:layout_marginLeft="20dp"
                    android:gravity="left"/>
            <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/estimated_time"
                    android:hint="Estimated Time"
                    android:layout_below="@+id/second_ing"
                    android:textSize="30sp"
                    android:layout_marginLeft="15dp"
                    android:textColor="#f55"
                    android:gravity="left"/>
            <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/time"
                    android:hint="From: 20 to 30 min"
                    android:layout_below="@+id/estimated_time"
                    android:textSize="15sp"
                    android:layout_marginLeft="20dp"
                    android:gravity="left"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>